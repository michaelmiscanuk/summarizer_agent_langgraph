# Environment Variables for Frontend
# Copy this to .env and fill in your values

# Backend API URL (update after deploying backend to Railway)
# For local development:
# API_BASE_URL=http://localhost:8000

# For production (deployed to Railway), use Railway's public URL:
API_BASE_URL=https://summarizer-agent-langgraph-production.up.railway.app

# Flask secret key (generate a random string for production)
SECRET_KEY=your-secret-key-change-in-production

# Flask environment
FLASK_ENV=development
